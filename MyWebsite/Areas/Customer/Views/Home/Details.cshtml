@model MyWebsite.Models.Models.Cart
@{
    ViewData["Title"] = "Details";
}
<h3>Product Details</h3>

<form method="post">
    <div class="row ">
        <div class="col-4">
            <img src="@Model.Product.ImageUrl" width="200" height="200" />
        </div>
        <div class="col-8">
            <div class="row">
                <label asp-for="Product.Name">Product Name : @Model.Product.Name</label>
                <label asp-for="Product.Description">Product Description : @Model.Product.Description</label>
                <label asp-for="Product.Price">Product Price :@Model.Product.Price.ToString("0.00")</label>
                <label asp-for="Product.Category.Id">Product Category :@Model.Product.Category</label>

                <div class="form-control">
                    <label asp-for="Count"></label>
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>

                 <div class="form-control">
                    <a class="btn btn-success" asp-action="Index" asp-controller="Home">Back to Home</a>
                    <button class="btn btn-dark" asp-action="Index">Add to Cart</button>
                </div>

            </div>
        </div>
    </div>
</form>

