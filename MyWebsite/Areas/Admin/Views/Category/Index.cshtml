@model MyWebsite.Models.ViewModel.CategoryVm
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid p-4">
    <div class="row p-3">
        <div class="col-4 text-info">
            Category List
        </div>
    </div>
    <div class="col-8 text-end p-6">
        <a class="btn btn-primary text-end" asp-area="Admin" asp-controller="Category" asp-action="CreateUpdate"><i class="bi bi-plus-circle-fill"></i>Add New Category</a>
    </div>
</div>



    <table class="table table-hover ">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th>Created date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.categories)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>@item.CreatedDateTime</td>
                    <td>
                    <a class="btn btn-outline-info" asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
